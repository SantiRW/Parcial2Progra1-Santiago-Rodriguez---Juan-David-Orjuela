<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.parcial2progra1.controlador.Controladores.FormularioController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Encabezado -->
    <Label style="-fx-text-fill: #2c3e50;" text="Añadir un Inmueble">
        <font>
            <Font name="System Bold" size="28" />
        </font>
    </Label>

    <!-- Formulario -->
    <VBox prefHeight="397.0" prefWidth="494.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets bottom="30" left="30" right="30" top="30" />
        </padding>

        <GridPane hgap="15" vgap="20">
            <!-- Código -->
            <Label style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;" text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtTipo" promptText="Ingrese el Tipo" style="-fx-font-size: 14px; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <!-- Nombre -->
            <Label style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;" text="Ciudad:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtCiudad" promptText="Ingrese la Ciudad" style="-fx-font-size: 14px; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <!-- Descripción -->
            <Label style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;" text="NumHabitaciones::" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <font>
               <Font size="10.0" />
            </font></Label>
            <TextField fx:id="txtNumHabitaciones" prefHeight="36.0" prefWidth="250.0" promptText="Ingrese el numero de habitaciones" style="-fx-font-size: 14px; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- Precio -->
            <Label style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;" text="Num Pisos:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="txtNumPisos" promptText="Ingrese el numero de pisos" style="-fx-font-size: 14px; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <!-- Stock -->
            <Label style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;" text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="txtPrecio" promptText="Ingrese el precio" style="-fx-font-size: 14px; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="300" />
            </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <!-- Botones -->
        <HBox alignment="CENTER_RIGHT" spacing="15">
            <VBox.margin>
                <Insets top="20" />
            </VBox.margin>
            <Button fx:id="btnCancelar" onAction="#onCancelar" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 25; -fx-cursor: hand; -fx-background-radius: 5;" text="Cancelar" />
            <Button fx:id="btnGuardar" onAction="#onGuardarProducto" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 25; -fx-cursor: hand; -fx-background-radius: 5;" text="Guardar Inmueble">
                <font>
                    <Font name="System Bold" size="14" />
                </font>
            </Button>
        </HBox>
    </VBox>

</VBox>
